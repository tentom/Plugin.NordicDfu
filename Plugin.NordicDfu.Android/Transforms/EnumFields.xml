<enum-field-mappings>
  <!--
  This example converts the constants Fragment_id, Fragment_name,
  and Fragment_tag from android.support.v4.app.FragmentActivity.FragmentTag
  to an enum called Android.Support.V4.App.FragmentTagType with values
  Id, Name, and Tag.
  
  <mapping jni-class="android/support/v4/app/FragmentActivity$FragmentTag" clr-enum-type="Android.Support.V4.App.FragmentTagType">
    <field jni-name="Fragment_name" clr-name="Name" value="0" />
    <field jni-name="Fragment_id" clr-name="Id" value="1" />
    <field jni-name="Fragment_tag" clr-name="Tag" value="2" />
  </mapping>
  -->
  <mapping jni-class="no/nordicsemi/android/dfu/DfuBaseService" clr-enum-type="Plugin.NordicDfu.Android.Enums.FileType">
    <!-- DfuBaseService.TYPE_SOFT_DEVICE -->
    <bitfield jni-name="TYPE_SOFT_DEVICE" clr-name="SoftDevice" value="1" />
    <!-- DfuBaseService.TYPE_BOOTLOADER -->
    <bitfield jni-name="TYPE_BOOTLOADER" clr-name="Bootloader" value="2" />
    <!-- DfuBaseService.TYPE_APPLICATION -->
    <bitfield jni-name="TYPE_APPLICATION" clr-name="Application" value="4" />
  </mapping>
  
  <mapping jni-class="no/nordicsemi/android/dfu/DfuServiceInitiator" clr-enum-type="Plugin.NordicDfu.Android.Enums.DfuScope">
    <!-- DfuServiceInitiator.SCOPE_SYSTEM_COMPONENTS -->
    <bitfield jni-name="SCOPE_SYSTEM_COMPONENTS" clr-name="SystemComponents" value="1" />
    <!-- DfuServiceInitiator.SCOPE_APPLICATION -->
    <bitfield jni-name="SCOPE_APPLICATION" clr-name="Application" value="2" />
  </mapping>
</enum-field-mappings>